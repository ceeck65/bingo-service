# Variables de entorno para el microservicio de bingo
# Copia este archivo como .env y ajusta los valores según tu configuración

# Configuración de Django
DEBUG=True
SECRET_KEY=tu-clave-secreta-aqui-cambiar-en-produccion
ALLOWED_HOSTS=localhost,127.0.0.1

# Base de datos (SQLite por defecto para desarrollo)
DATABASE_URL=sqlite:///db.sqlite3

# Para producción con PostgreSQL (opcional)
# DATABASE_URL=postgresql://usuario:password@localhost:5432/bingo_db

# Configuración de CORS
CORS_ALLOW_ALL_ORIGINS=True

# Configuración del servidor
SERVER_PORT=8000
SERVER_HOST=0.0.0.0

# Configuración de logging
LOG_LEVEL=INFO

# Configuración específica del bingo
BINGO_MAX_CARDS_PER_REQUEST=100
BINGO_DEFAULT_PAGE_SIZE=20
